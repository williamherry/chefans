<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email, "E-mail:" %>
    <%= f.email_field :email, placeholder: "foo@bar.com" %>
  </div>

  <div class="action">
    <%= f.submit "Registry" %>
  </div>
<% end %>
